{
    "apps" : [
        {
            "name"        : "noah-system",
            "script"      : "index.js",
            "args"        : [],
            "node_args"   : "--harmony",
            "merge_logs"  : true,
            "error_file" : "/usr/app/noah-log/pm2log/pm2.error.log",
            "out_file" : "/usr/app/noah-log/pm2log/pm2.out.log",
            "log_date_format" : "YYYY-MM-DD HH:mm Z",
            "instances" : 5,
            "exec_mode" : "cluster",
            "cwd"         : ".",
            "max_memory_restart" : "200M",
            "env": {
                "NODE_ENV": "production"
            },
            "env_development": {
                "NODE_ENV": "development"
            },
            "env_production" : {
                "NODE_ENV": "production"
            },
            "env_qa" : {
                "NODE_ENV": "qa",
                "DEBUG": "rrd-*"
            },
            "env_stage" : {
                "NODE_ENV" : "stage"
            }
        }
    ]
}